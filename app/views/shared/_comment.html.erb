<% if (post.comments.empty?) %>
  <p>No comment yet.</p>
<% else %>
  <% post.recent_comments.each do |comment| %>
    <ul>
      <li class="comment-list">
        <%= comment.author.name %>: <%= comment.text %>
        <% if can? :delete, comment %>
          <button type="button" class="btn delete-btn"><%= link_to "Delete Comment", user_post_comment_path(user_id: comment.author.id, post_id: comment.post.id, id: comment.id), data: { turbo_method: :delete } %></button>
        <% end %>
      </li>
    </ul>
  <% end %>
<% end %>